@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct; 

<root>
    <IconPanel class="icon"></IconPanel>
	@Game.LocalPawn.Health.CeilToInt().Clamp(0,255)
    <IconPanel class="seperator"></IconPanel>
</root>

@code
{ 
	public override void Tick()
	{
		this.Style.Width = 1049 + (Screen.Height / Screen.Width) * -1250;
		SetClass("invisible", !(Game.LocalPawn as HLPlayer).HasHEV || (Game.LocalPawn as HLPlayer).Health <= 0);
	}
	protected override int BuildHash()
	{
		return HashCode.Combine(Game.LocalPawn.Health);
	}
}